<?xml version="1.0" encoding="UTF-8"?>
<Module>
	<ModulePrefs title="Follow me on Twitter">
		title_url="https://www.twitter.com"
		width="250"
		height="400">
		<Require feature="setprefs" />
		<Require feature="dynamic-height" />
	</ModulePrefs>
	<Content type="html"> 
		<![CDATA[ 
		<script src="https://widgets.twimg.com/j/2/widget.js"></script> 
		<script> 
		function Initialize() { 
			var dimensions = gadgets.window.getViewportDimensions(); 
			var settings = { 
				version: 2, 
				id: 'widget', 
				interval: 6000, 
				width: dimensions['width'], 
				height: dimensions['height'], 
				theme: { 
					shell: { 
						background: '#dadada', 
						color: '#ffffff' 
					}, 
					tweets: { 
						background: '#ffffff', 
						color: '#000000', 
						links: '#0762eb' 
					} 
				}, 
				features: { 
					scrollbar: true, 
					loop: false, 
					live: true, 
					hashtags: true, 
					timestamp: true, 
					fullscreen: false, 
					behavior: 'all' 
				},
				type: 'profile', 
				rpp: 6
			}; 

			var userId = 'UKPLab';
			new TWTR.Widget(settings).render().setUser(userId).start(); 
		}; 
		gadgets.util.registerOnLoadHandler(Initialize); 
		</script> 
		<div id="widget" style="width:100%;height:100%"> 
		</div> 
		]]>
	</Content>
</Module>